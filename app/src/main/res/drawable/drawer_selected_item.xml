<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
    <item
        android:left="@dimen/activity_horizontal_margin"
        android:right="@dimen/activity_horizontal_margin" >
        <shape android:shape="rectangle">
            <solid android:color="#494949"/>
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>

    <item>
        <inset>
            <selector xmlns:android="http://schemas.android.com/apk/res/android">
                <item android:state_checked="true" android:drawable="@color/lightGrey"/>
                <item android:state_checkable="false" android:drawable="@android:color/transparent" />
            </selector>

        </inset>
    </item>


</layer-list>