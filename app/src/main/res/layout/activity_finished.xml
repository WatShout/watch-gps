<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/finishedRun"
        android:layout_width="160dp"
        android:layout_height="228dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="140dp" />

    <TextView
        android:id="@+id/finishedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="Run Complete"
        android:textSize="30dp" />

    <Button
        android:id="@+id/uploadGpx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/returnToMap"
        android:layout_centerHorizontal="true"
        android:text="upload run to strava"
        android:textSize="20dp" />

    <Button
        android:id="@+id/returnToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="return to map"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/finishedDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/finishedRun"
        android:layout_marginEnd="45dp"
        android:text="Distance:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/finishedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uploadGpx"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"
        android:text="Time:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/finishedPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uploadGpx"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="245dp"
        android:text="Pace:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/finishedTime"
        android:layout_marginTop="181dp"
        android:text=""
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/finishedTime"
        android:layout_marginTop="255dp"
        android:text=""
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/finishedTime"
        android:layout_marginBottom="214dp"
        android:text=""
        android:textSize="20dp"/>


</RelativeLayout>