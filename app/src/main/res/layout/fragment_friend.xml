<?xml version="1.0" encoding="utf-8"?>


    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/friendSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".FriendFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Add Friend"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:text="Friend Requests"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="239dp"
            android:text="Friends"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/emailInput"
            android:layout_toEndOf="@+id/emailInput"
            android:text="SEND" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendRequestView"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="18dp"
            android:background="@color/colorPrimaryDark"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>


