<?xml version="1.0" encoding="utf-8"?>


    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/friendSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- TODO: Update blank fragment layout -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendRequestView"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/colorAccent"></android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/friendRequestView"></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>


