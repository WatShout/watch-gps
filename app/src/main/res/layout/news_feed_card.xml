<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_horizontal_margin"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#494949"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#494949">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/news_feed_name"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:id="@+id/news_feed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="94dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="sans-serif"
                    android:text="Elizabeth Bailey"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/news_feed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/news_feed_name"
                    android:layout_below="@+id/news_feed_name"
                    android:fontFamily="sans-serif"
                    android:text="JUN 03 at 8:31 AM"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/news_feed_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/news_feed_name"
                    android:layout_marginTop="64dp"
                    android:fontFamily="sans-serif"
                    android:text="Golden gate park"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"/>

                <ImageView
                    android:id="@+id/news_feed_map"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@color/lightGrey" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/news_feed_name"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:fontFamily="sans-serif"
                    android:text="Distance"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="Time"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:layout_marginEnd="89dp"
                    android:fontFamily="sans-serif"
                    android:text="Pace"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Share"
                    android:textColor="#fff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/news_feed_activity_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/news_feed_name"
                    android:layout_below="@+id/textView9"
                    android:fontFamily="sans-serif"
                    android:text="4.6"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/news_feed_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_below="@+id/textView9"
                    android:fontFamily="sans-serif"
                    android:text="34:24"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/news_feed_activity_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/textView9"
                    android:fontFamily="sans-serif"
                    android:text="7:25"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/deleteActivity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/profilePic"
                    android:layout_marginEnd="15dp"
                    app:srcCompat="@drawable/decline" />

                <ImageView
                    android:id="@+id/weather"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignStart="@+id/profilePic"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/sunny" />

                <TextView
                    android:id="@+id/weather_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:layout_toEndOf="@+id/weather"
                    android:text="Sunny"
                    android:textColor="#fff"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/profilePic"
                    android:layout_below="@+id/news_feed_activity_name"
                    android:text="16Â°C"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/news_feed_name"
                    android:layout_below="@+id/news_feed_activity_distance"
                    android:text="miles"
                    android:textColor="#fff"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/news_feed_activity_distance"
                    android:text="minute/mile"
                    android:textColor="#fff"
                    android:textSize="8dp" />
            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>